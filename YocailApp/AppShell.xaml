<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YocailApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YocailApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Icon="home.png">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="search.png">
            <ShellContent Title="Search" ContentTemplate="{DataTemplate local:SearchPage}" />
        </Tab>
        <Tab Icon="coffeecup.png">
            <ShellContent Title="Discover" ContentTemplate="{DataTemplate local:DiscoverPage}" />
        </Tab>
    </TabBar>
</Shell>
