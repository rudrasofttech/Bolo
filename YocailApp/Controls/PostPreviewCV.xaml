<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YocailApp.Controls.PostPreviewCV" x:Name="this">
    <Frame Margin="6,3,6,3" CornerRadius="10" Padding="1" BorderColor="Grey" MaximumHeightRequest="150">
        <Frame Padding="0" CornerRadius="10" Margin="0" IsClippedToBounds="True">
            <Image Source="{Binding FirstPhoto}"  Aspect="AspectFill" HeightRequest="150" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                </Image.GestureRecognizers>
            </Image>
        </Frame>
    </Frame>
    
</ContentView>
