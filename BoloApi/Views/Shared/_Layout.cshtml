<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/css/ReactCrop.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="~/libs/jquery-3.6.0.min.js"></script>
    <script src="~/libs/react.development.js"></script>
    <script src="~/libs/react-dom.development.js"></script>
    <environment include="Development">
        <script src="~/libs/babel.min.js" charset="utf-8"></script>
    </environment>
    <style>
        .maxwidth{
            max-width:900px !important;
            margin:0 auto !important;
        }
        body{
            padding-top:60px;
        }
    </style>
    @RenderSection("head", false)
</head>
<body>
    <div class="container px-0" style="max-width:900px">
        <div class="fixed-top bg-white border-bottom maxwidth">
            <div class="row py-2">
                <div class="col-2"><span class="text-dark fs-3"></span></div>
                <div class="col text-end">
                    <a class="px-3 text-dark fs-3" href="@Url.Content("~/")" title="Home"><i class="bi bi-house-door"></i></a>
                    <a class="px-3 text-dark fs-3" href="@Url.Content("~/addpost")" title="Add Post"><i class="bi bi-journal-plus"></i></a>
                    <a class="px-3 text-dark fs-3" href="@Url.Content("~/conversation")" title="Conversations"><i class="bi bi-chat-dots"></i></a>
                    <a class="px-3 text-dark fs-3" href="@Url.Content("~/profile")" title="Profile"><i class="bi bi-person-square"></i></a>
                </div>
            </div>
            @RenderSection("toolbar", false)
        </div>
        @RenderBody()
    </div>
    <script src="~/libs/signalr.min.js"></script>
    <script src="~/libs/ReactCrop.min.js"></script>
    <environment include="Development">
        <script type="text/babel" src="~/js/HeartBeat.js">
        </script>
        <script type="text/babel" src="~/js/MessageStrip.js">
        </script>
        <script type="text/babel" src="~/js/RegisterForm.js">
        </script>
        <script type="text/babel" src="~/js/ManageProfile.js">
        </script>
        <script type="text/babel" src="~/js/NavMenu.js">
        </script>
    </environment>
    <environment include="Staging,Production" exclude="Development">
        <script src="~/js/compiled/HeartBeat.js">
        </script>
        <script src="~/js/compiled/MessageStrip.js">
        </script>
        <script src="~/js/compiled/RegisterForm.js">
        </script>
        <script src="~/js/compiled/ManageProfile.js">
        </script>
        <script src="~/js/compiled/NavMenu.js">
        </script>
    </environment>
    <script src="~/libs/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
