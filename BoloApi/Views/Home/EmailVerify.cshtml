@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Verify Email - Yocail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/theme1/css/reset.css">
    <link rel="stylesheet" href="~/theme1/css/style.css">
    <link rel="stylesheet" href="~/theme1/css/override.css">
</head>
<body>
    <div class="container text-center">
        <div class="my-3">
            <a href="@Url.Content("~/")">
                <img src="~/theme1/images/yocail-logo.svg" class="img-fluid" alt="Yocail logo" style="max-width:200px" />
            </a>
        </div>
        @if (ViewBag.IsEmailVerified == true)
        {
            <div class="my-5 fs-3">Your email is verified.</div>
            <div action="p-3 fs-5">You will be redirected to your feed automatically, or you may click the link bellow.</div>
            <a href="@Url.Content("~/profile/")" class="btn btn-blue mt-5 fs-4">Go To Your Profile</a>
            <script>
                setTimeout(function () {
                    location.href = "@Url.Content("~/")";
                }, 2000);
            </script>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="mb-5 text-danger">@ViewBag.Error</p>
        }
    </div>
</body>
</html>
