@{
    ViewData["Title"] = "Yocail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <environment include="Development">
        <script type="text/babel">
            ReactDOM.render(
            <Home search="@ViewBag.Search" />,
            document.getElementById('root')
            );
        </script>
    </environment>
    <environment include="Staging,Production" exclude="Development">
        <script>
            ReactDOM.render(React.createElement(Home, { search: "@ViewBag.Search" }), document.getElementById('root'));
        </script>
    </environment>
}